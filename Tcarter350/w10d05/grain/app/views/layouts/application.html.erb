<!DOCTYPE html>
<html>
  <head>
    <title>Grain</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% flash.each do |name, message| %>
      <div class="flash-message flash-message-<%= name %>">
        <%= message %>
      </div>
      <% end %>
      <nav class="navbar navbar-light bg-faded">
        <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
        <div class="collapse navbar-toggleable-md" id="navbarResponsive">
          <a class="navbar-brand" href="#">GRAIN</a>
          <ul class="nav navbar-nav">
            <li class="nav-item active">
              <%= link_to "Home", root_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="nav navbar-nav float-xs-right">
            <% if logged_in? %>
            <!-- <li class="nav-item">Hello, <%= current_user.username %></li> -->
            <li class="nav-item">
              <%= link_to 'Logout', logout_path, method: :delete, data: {confirm: 'Are you sure?'}, class: 'nav-link' %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "Register", register_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Login", login_path, class: 'nav-link' %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main class="container">
      <%= yield %>
    </main>
  </body>
</html>
